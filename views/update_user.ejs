
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Students</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Student's information</h2>
            <span class="text-light">Use the below form to Update </span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.name %>" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="hour" class="text-light">Hour</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="hour" value="1hr" <%= user.hour == '1hr' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">1hr</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="hour" value="2hr"  <%= user.hour == '2hr' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">2hr</label>
            </div>
        </div>

        <div class="form-group">
            <label for="mode" class="text-light">Mode of Attendance</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="mode" value="Online" <%= user.mode == 'Online' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Online</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="mode" value="Offline" <%= user.mode == 'Offline' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Offline</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
